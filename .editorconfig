# EditorConfig is awesome: https://EditorConfig.org

# This file is the top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

#[{.,}*.{js{,*},y{a,}ml}]
#indent_style = space
#indent_size = 2

# git
[.git*]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,bash}]
charset = utf-8
end_of_line = lf
indent_style = space
# like -i=2
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

#shell_variant      = bash
#shell_variant      = posix # like -ln=posix
#binary_next_line   = true  # like -bn
#switch_case_indent = true  # like -ci
#space_redirects    = true  # like -sr
#keep_padding       = true  # like -kp
#function_next_line = true  # like -fn
#never_split        = true  # like -ns

# Makefiles
[{Makefile,makefile}]
indent_style = tab
indent_size = 4

# Justfiles
[{justfile,.justfile,.justfile.user}]
indent_style = tab
indent_size = 4

# XML
[*.{xml}]
indent_style = space
indent_size = 2
insert_final_newline = ignore

# JSON
[*.{json,json5}]
indent_style = space
indent_size = 2
insert_final_newline = ignore

# YAML
[*.{y{a,}ml}]
indent_style = space
indent_size = 2
insert_final_newline = false

# TOML
[*.toml]
indent_style = space
indent_size = 2
insert_final_newline = false

# ini configuration files
[*.ini]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

# Markdown
[*.{md,mkdn,mdx}]
indent_style = space
#indent_size = 2
#max_line_length = 80
trim_trailing_whitespace = false

# Python
[*.{py}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 119
trim_trailing_whitespace = true
insert_final_newline = true
